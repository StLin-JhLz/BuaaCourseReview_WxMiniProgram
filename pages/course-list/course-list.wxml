<!--pages/course-list/course-list.wxml-->
<t-tabs defaultValue="{{0}}" theme="card" bind:change="onTabsChange" space-evenly="{{false}}" >
  <t-tab-panel label="全部" value="0" />
  <t-tab-panel label="基础" value="1" />
  <t-tab-panel label="核心专业" value="2" />
  <t-tab-panel label="一般专业" value="3" />
  <t-tab-panel label="核心通识" value="4" />
  <t-tab-panel label="一般通识" value="5" />
  <t-tab-panel label="体育" value="6" />
  <t-tab-panel label="其他" value="7" />
  <!-- <t-tab-panel wx:for="{{7}}" wx:key="index" label="选项" value="{{index}}" /> -->
</t-tabs>

<view class="side-bar-wrapper">
  <t-side-bar value="{{sideBarIndex}}" bind:change="onSideBarChange">
    <t-side-bar-item
      wx:for="{{categories}}"
      wx:key="index"
      value="{{item.value || index}}"
      label="{{item.num}}{{item.name_s}}"
      badge-props="{{item.badgeProps}}"
    />
</t-side-bar>
  
  <scroll-view class="content" scroll-y scroll-with-animation scroll-top="{{scrollTop}}" bind:scroll="onScroll">

   
    <view wx:for="{{categories}}" wx:key="index" class="section">
      <view class="title">{{item.num}} {{item.name || item.name_s}}</view>
      <t-grid column="{{2}}" border="{{false}}">
        <block wx:for="{{item.items}}" wx:key="index" wx:for-item="course">
          <t-grid-item
            text="{{course.name}}"
            bind:click = "clickCourse"
            data-id="{{course.id}}"
          >
          </t-grid-item>
        </block>
      </t-grid>
    </view>
  </scroll-view>
</view>