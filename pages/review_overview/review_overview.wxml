<!--pages/review_overview/review_overview.wxml-->
<t-back-top theme="round" text="顶部" bind:to-top="onToTop"></t-back-top>

<view class="homeBox"></view>
    <view class="demo-title">{{courseName}}</view>
    <view class="block">
    <t-tag class="margin-16" theme="primary">{{departmentName}}</t-tag>
    <t-tag class="margin-16" variant="light-outline">{{credit}}学分</t-tag>
</view>
<view>{{cnt}}评分总览</view>
<t-cell-group  class = "review" theme="card" bordered="false">
    
    <t-cell title="22-23-3学期" 
    description = "总分:5 工作量:5 评教:4" hover = false />
    <t-cell title="21-22-3学期" 
    description = "总分:5 工作量:5 评教:4" hover = false />
</t-cell-group>
<view>评价详情</view>
<block wx:for="{{reviews}}" wx:for-item="review" wx:for-index = "i" wx:for-key = "review.id">
    <t-cell-group  class = "review" theme="card" bordered="false">
    
        <t-cell title="{{review.title}}" 
        description = "{{review.teacher_id}}老师（{{review.semester}}学期)，{{review.time}}" hover = false />
        <t-cell description = "{{review.text}}"/>
    </t-cell-group>

    <view class="button-example">
        <t-button theme="primary" size="small">赞</t-button>
        <t-button theme="primary" size="small">踩</t-button>
    </view>

 </block>




