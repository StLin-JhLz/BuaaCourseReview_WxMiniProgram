/* index.wxss */
.search-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }
  
  .search-input {
    width: 90%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
    margin-bottom: 20px;
  }
  
  .dropdown-menu {
    width: 90%;
    max-height: 200px;
    border: 1px solid #ccc;
    border-radius: 5px;
    overflow: auto;
  }
  
  .dropdown-scroll {
    height: 100%;
  }
  
  .dropdown-item {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    display: flex;
    flex-direction: column;
  }
  
  .dropdown-title {
    font-size: 18px;
    font-weight: bold;
  }
  
  .dropdown-subtitle {
    font-size: 14px;
    color: #999;
  }
  
  .no-matches {
    padding: 10px;
    text-align: center;
    color: #999;
  }
  