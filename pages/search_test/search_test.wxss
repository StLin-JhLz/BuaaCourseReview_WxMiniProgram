.search-container {
    
    display: flex;
    justify-content: center;
  }

.search-wrapper{
    position: relative;
    padding: 10px;
    width: 90%;
}
  
  .search-input {
    width: 90%;
    height: 30px;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 0px;
    margin:0px;
  }
  
  .dropdown-menu {
    position: absolute;
    top: 40px;
    left: 5%; /* 调整为 5% */
    width: 100%; /* 调整为 90% */
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 10px;
    padding:0;
    z-index: 999;
    margin:0;
  }
  
  .dropdown-scroll {
    max-height: 200px;
    overflow-y: scroll;
  }
  
  .dropdown-item {
    padding: 5px;
    cursor: pointer;
  }
  
  .dropdown-item:hover {
    background-color: #f5f5f5;
  }
  
  .no-matches {
    color: #999;
    text-align: center;
  }
  
  .selected-item {
    margin-top: 10px;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  